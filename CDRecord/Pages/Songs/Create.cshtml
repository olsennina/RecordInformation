@page
@model CDRecord.Pages.Songs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Create Song</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Song.RecordId" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Song.Title" class="control-label"></label>
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Length" class="control-label"></label>
                <input asp-for="Song.Length" class="form-control" />
                <span asp-validation-for="Song.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Author" class="control-label"></label>
                <input asp-for="Song.Author" class="form-control" />
                <span asp-validation-for="Song.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Records/Index" class="text-dark">>Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
