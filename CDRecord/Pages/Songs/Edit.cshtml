@page
@model CDRecord.Pages.Songs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Edit Song</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Song.SongId"/>
            
            <div class="form-group">
                @*<label asp-for="Song.RecordId" class="control-label"></label>*@
                <input type="hidden" asp-for="Song.RecordId" class="form-control" />
              @*  <span asp-validation-for="Song.RecordId" class="text-secondary"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Song.Title" class="control-label"></label>
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Length" class="control-label"></label>
                <input asp-for="Song.Length" class="form-control" />
                <span asp-validation-for="Song.Length" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Author" class="control-label"></label>
                <input asp-for="Song.Author" class="form-control" />
                <span asp-validation-for="Song.Author" class="text-secondary"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Records/Index" class="text-dark">>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
